@page "/createuser"
<link href="css/inputs.css" rel="stylesheet" />

<div class="form-container">
<form>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" required class="customInput" id="username" @bind="Username"/>
    </div>
    
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" required id="password" @bind="Password"/>
    </div>
    
    <div class="form-group">
        <label for="pame">Name</label>
        <input type="text" required id="pame" @bind="Name"/>
    </div>
    
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" required id="phone" @bind="Phone"/>
    </div>
    
    <div class="form-group">
        <label for="roleDropdown">Role</label>
        <select id="roleDropdown" required @bind="Role">
            <option value="Admin">Admin</option>
            <option value="Employee">Employee</option>
        </select>
    </div>
    
    <!-- Submit Button -->
    <button class="btn btn-primary" @onclick="SubmitForm">Create user</button>
</form>
</div>
